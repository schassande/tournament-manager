{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../persistent-data-model" }
  ]
}
